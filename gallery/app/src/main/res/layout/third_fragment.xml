<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">




    <TextView
        android:id="@+id/tvOutput"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="124.5dp"
        android:background="@drawable/shape_show_text1"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_show_text"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/morse_dotline"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="150dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_morse_circle"
        />

    <Button
        android:id="@+id/morse_space"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:background="@drawable/shape_morse_space"
        android:text="H"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/morse_translate"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Translate"
        android:textSize="12dp"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_translate"
        android:layout_marginTop="250dp"
        />

    <Button
        android:id="@+id/morse_more"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="342dp"
        android:layout_marginTop="255dp"
        android:background="@drawable/ic_more" />



    <Button
        android:id="@+id/morse_clear"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/ic_clear" />

    <Button
        android:id="@+id/morse_backspace"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="240dp"
        android:background="@drawable/ic_backspace"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        />
</RelativeLayout>
